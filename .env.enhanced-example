# Enhanced Crypto Research Swarm - Environment Variables
# Copy this file to .env and fill in your values

# Required (at least one of these is needed)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Optional model specifications
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
OPENAI_MODEL=gpt-4o

# For web search capability (recommended)
TAVILY_API_KEY=your_tavily_key_here

# For persistent memory (optional but recommended)
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_INDEX=your_index_name
PINECONE_ENVIRONMENT=gcp-starter

# Optional - Logging level (debug, info, warn, error)
LOG_LEVEL=info

# For Twitter posting (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Swarm Configuration Options
# TARGET_CRYPTOS=bitcoin,ethereum,ripple,solana,cardano,dogecoin
# MAX_CONCURRENT_AGENTS=4
# FEEDBACK_FREQUENCY=0.5